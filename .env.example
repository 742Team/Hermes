# Application configuration
REACT_APP_NAME=Hermes Chat
REACT_APP_VERSION=1.0.0

# API configuration
REACT_APP_API_URL=http://localhost:3001/api
REACT_APP_WEBSOCKET_URL=ws://localhost:3001/ws

# Feature flags
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_FILE_SHARING=true
REACT_APP_ENABLE_READ_RECEIPTS=true

# Electron specific
ELECTRON_IS_DEV=1

# Styling
REACT_APP_PRIMARY_COLOR=#0A84FF
REACT_APP_SECONDARY_COLOR=#34AADC
REACT_APP_ACCENT_COLOR=#30D158

# Logging
REACT_APP_LOG_LEVEL=info